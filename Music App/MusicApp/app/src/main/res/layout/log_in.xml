<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/scrollViews"
    tools:context="com.example.android.musicapp.LogIn"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#262626"
        android:orientation="vertical">

        <TextView
            style="@style/titlesLogIng"
            android:fontFamily="sans-serif"
            android:text="@string/username" />

        <EditText
            style="@style/editTextLogIn"
            android:inputType="text" />

        <TextView
            style="@style/titlesLogIng"
            android:fontFamily="sans-serif"
            android:text="@string/password" />


        <EditText
            style="@style/editTextLogIn"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/forgotten_account"
            style="@style/complementaryTextLogIn"
            android:text="@string/forgotten_account" />

        <Button
            android:id="@+id/angry_btn"
            style="@style/buttonLogIn"
            android:text="@string/log_in" />

        <TextView
            android:id="@+id/sing_up"
            style="@style/complementaryTextLogIn"
            android:text="@string/sing_up" />

        <TextView
            style="@style/explanationLogIn"
            android:text="@string/explanation"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/credits"
            style="@style/complementaryTextLogIn"
            android:text="@string/credits" />

    </LinearLayout>

</ScrollView>
