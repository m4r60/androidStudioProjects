<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    android:orientation="vertical"
    tools:context="com.example.android.musicapp.LogIn">

    <LinearLayout style="@style/navMainLinearLayout">

        <LinearLayout
            android:id="@+id/home_nav"
            style="@style/navLinearLayouts">

            <ImageView
                android:id="@+id/home"
                style="@style/navImages"
                android:src="@drawable/home_white" />

            <TextView
                style="@style/navText"
                android:text="@string/home"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_nav"
            style="@style/navLinearLayouts">

            <ImageView
                android:id="@+id/search"
                style="@style/navImages"
                android:src="@drawable/search_white" />

            <TextView
                style="@style/navText"
                android:text="@string/search"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/radio_nav"
            style="@style/navLinearLayouts">

            <ImageView
                android:id="@+id/radio"
                style="@style/navImages"
                android:src="@drawable/radio_orange" />

            <TextView
                style="@style/navText"
                android:text="@string/radio"
                android:textAlignment="center"
                android:textColor="#FAB520" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playlist_nav"
            style="@style/navLinearLayouts">

            <ImageView
                android:id="@+id/play_list"
                style="@style/navImages"
                android:src="@drawable/playlist_white" />

            <TextView
                style="@style/navText"
                android:text="@string/playlist"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buy_nav"
            style="@style/navLinearLayouts">

            <ImageView
                android:id="@+id/buy"
                style="@style/navImages"
                android:src="@drawable/cart_white" />

            <TextView
                style="@style/navText"
                android:text="@string/buy"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/navLine" />

    <ScrollView
        style="@style/scrollViewMenu"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/explanationLogIn"
                android:text="@string/explanationRadio"
                android:textAlignment="center" />
            <!--****************************MAIN CONTAINER*******************************-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout style="@style/relativeRadiosContainer">

                    <LinearLayout style="@style/linearRadiosContainer">

                        <ImageView
                            style="@style/imageRadio"
                            android:src="@drawable/maxima" />

                        <TextView
                            style="@style/textRadio"
                            android:text="@string/maxima"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linearRadiosContainer"
                        android:layout_alignParentRight="true">

                        <ImageView
                            style="@style/imageRadio"
                            android:src="@drawable/cope" />

                        <TextView
                            style="@style/textRadio"
                            android:text="@string/cope"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linearRadiosContainer"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true">

                        <ImageView
                            style="@style/imageRadio"
                            android:src="@drawable/los40" />

                        <TextView
                            style="@style/textRadio"
                            android:text="@string/los40"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linearRadiosContainer"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true">

                        <ImageView
                            style="@style/imageRadio"
                            android:src="@drawable/radio_dial" />

                        <TextView
                            style="@style/textRadio"
                            android:text="@string/cadenaDial"
                            android:textAlignment="center" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <!--***********************************************************-->
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <TextView
            style="@style/textSong"
            android:text="@string/textSongMenu"
            android:textAlignment="center" />

        <LinearLayout style="@style/songMenuHome">

            <ImageView
                style="@style/imageSongMenuHome"
                android:src="@drawable/volume_white" />

            <ImageView
                style="@style/imageSongMenuHome"
                android:src="@drawable/previous_white" />

            <ImageView
                android:id="@+id/play"
                style="@style/imageSongMenuHome"
                android:src="@drawable/play_white" />

            <ImageView
                style="@style/imageSongMenuHome"
                android:src="@drawable/next_white" />

            <ImageView
                style="@style/imageSongMenuHome"
                android:src="@drawable/heart_white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
