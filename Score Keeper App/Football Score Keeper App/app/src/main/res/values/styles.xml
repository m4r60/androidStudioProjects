<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#009933</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#ffad33</item>
    </style>

    <!--**********************LINEAR LAYOUTS***********************-->
    <style name="general_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="second_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">10</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="third_vertical_linear_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="statistics_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_statistic_linear</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="statistics_linear_layout_titles">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="statistics_linear_layout_scores">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--*************************Line*****************************-->
    <style name="line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_line</item>
        <item name="android:background">@color/lineBackground</item>
    </style>

    <!--**********************Team Titles**************************-->
    <style name="team_titles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!--**********************Buttons**************************-->
    <style name="buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_buttons</item>
    </style>

    <style name="reset_button">
        <item name="android:layout_width">@dimen/reset_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_statistic</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_reset_button</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">0</item>
    </style>

    <!--**********************Statistic title container**************************-->
    <style name="statisticTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_statistic</item>
        <item name="android:layout_marginLeft">@dimen/margin_statistic</item>
        <item name="android:layout_marginTop">@dimen/margin_statistic</item>
        <item name="android:background">@color/statisticTitleBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="statisticScore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">@dimen/margin_statistic</item>
        <item name="android:background">@color/statisticScoreBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
